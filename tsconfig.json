{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"]
}
